<!doctype html>
<html>

	<head>
	
	    <meta charset="utf-8">
	    <meta name="viewport" content="width=device-width, initial-scale=1">
	    
	
	    <!-- CSS -->
	    <link href="css/bootstrap.min.css" rel="stylesheet" type="text/css">
		<link href="landing.css" rel="stylesheet" type="text/css">

		<title>Emotion Notion</title>
	
	</head>

<body>

    <div id="wrapper">

        <!-- NAVBAR			
        ======================================================================================================================================= -->	   	
	    <div class = "navbar navbar-inverse navbar-static-top"> <!--Black bar accross the top-->
			<div class = "container">
				<a href = "#" class = "navbar-brand"> Emotion Notion </a>

				<!--Create Button-->
				<button class = "navbar-toggle" data-toggle = "collapse" data-target = ".navHeaderCollapse"> <!--When this button is pressed it targets navHeadercollapse-->

					<!--#of Lines in the mobile sized dropdown button-->
					<span class = "icon-bar"></span>
					<span class = "icon-bar"></span>

				</button>

				<!--Collapsable navbar-->
				<div class = "collapse navbar-collapse navHeaderCollapse">
					<ul class = "nav navbar-nav navbar-right">

						<li class = "active"> <a href = "#"> Home </a> </li> <!--active makes Home indented-->

						<li> <a href = "#"> MyTimeline </a> </li>

					</ul>
				</div>
			</div>
		</div>
        <!-- END END END NAVBAR			
        ======================================================================================================================================= -->	

        <div id="page-wrapper">

            <div class="container-fluid">

                <!-- Page Heading -->
                <div class="row">
                    <div class="col-lg-12">
                        <h1 class="page-header">
                            EmotionNotion
                            <small>FUCK HEROKU </small>
                            <input class="btn btn-default" type="button"  onClick="parent.location='/task' "value="New Task" style="float: right;">
                        </h1>
                        {{#each tasks}}
                        <div class="task">
                            <h2 class="task_heading" > Name: </h2>
                            <h3 class="task_name" > {{name}}</h3>
                            <br>
                            <h2 class="task_heading" > Date: </h2>
                            <h3 class="task_date" >{{date}}</h3>
                            <br>
                            <h2 class="task_heading" style="display:inline"> Priority: </h2>
                            <h3 class="task_priority" style="display:inline">{{priority}}</3>
                            <br>
                            <h2 class="task_heading" style="display:inline"> Description: </h2> 
                            <h3 class="task_description"style="display:inline">{{description}}</h3>
                            <br><br><br>


                        </div>
                        {{/each}}
                    </div>
                </div>
                <!-- /.row -->

            </div>
            <!-- /.container-fluid -->

        </div>
        <!-- /#page-wrapper -->

    </div>
    <!-- /#wrapper -->

    <!-- jQuery -->
    <script src="js/jquery.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="js/bootstrap.min.js"></script>

</body>

</html>
